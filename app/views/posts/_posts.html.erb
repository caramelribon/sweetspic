<% if posts.any? %>
<div class="row">
    <% posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-post shadow bg-white rounded">
          <%= image_tag post.img.url, size: "350x350" %>
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="p-1 flex-grow-1">
                <h3><%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %></h3>
              </div>
              <div class="p-1">
                <%= link_to 'View', post, class: "btn btn-outline-secondary btn-sm" %>
              </div>
              <div class="p-1">
                <%= render 'favorites/favorite_button', post: post %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
<div class="pagination">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<% end %>