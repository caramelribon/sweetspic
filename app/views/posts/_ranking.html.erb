<% posts.each.with_index(1) do |post, i| %>
  <div class="mt-5 mb-2 ranking">
    <i class="far fa-star"></i>
    <p><%= i %></p>
  </div>
  <div class="py-5 bg-light">
    <div class="row">
      <div class="col-md-6">
        <div class="m-5">
            <div>
              <%= image_tag post.img.url, size: "350x350" %>
              <div class="text-center m-3">
                <h1><%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %></h1>
              </div>
            </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="m-5">
          <h4>Genre</h4>
          <p class="m-2"><%= post.genre %></p>
        </div>
        <div class="m-5">
          <h4>Location</h4>
          <p class="m-2"><%= post.location %></p>
        </div>
        <div class="m-5">
          <h4>Text</h4>
          <p class="m-2"><%= post.text %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>