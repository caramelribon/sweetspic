<% if current_user.favorite?(post) %>
  <%= form_with(model: current_user.favorites.find_by(post_id: post.id), method: :delete, remote: true) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.button :type => "submit", style: 'border-style: none; background: none; outline: none' do %>
      <i class="fas fa-heart unfavorite_button"></i>
      <% end %>
  <% end %>
    
<% else %>
  <%= form_with(model: current_user.favorites.build, remote: true) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.button :type => "submit", style: 'border-style: none; background: none; outline: none' do %>
      <i class="far fa-heart favorite_button"></i>
      <% end %>
  <% end %>
<% end %>